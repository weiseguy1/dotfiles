# Typeface
NORMAL="0"
BRIGHT="1"
DIM="2"

#Colors
BLACK="$NORMAL;30m"
RED="$BRIGHT;31m"
GREEN="$NORMAL;32m"
BROWN="$BRIGHT;33m"
BLUE="$BRIGHT;34m"
PURPLE="$NORMAL;35m"
CYAN="$NORMAL;36m"
GRAY="$NORMAL;37m"

if [ "$EUID" -ne 0 ]
then
    PS1='\[\033[$BLUE\][\[\033[$GRAY\]\u\[\033[$RED\]@\[\033[$GRAY\]\h\[\033[$BLUE\]] \[\033[$GRAY\]\W $ '
else
    PS1='\[\033[$RED\][\[\033[$GRAY\]\u\[\033[$RED\]@\[\033[$GRAY\]\h\[\033[$RED\]] \[\033[$RED\]\W # \[\033[$GRAY\]'
fi
